---
import ButtonNavbar from "@components/ButtonNavbar";
---

<navbar class="fixed top-0 left-0 w-full p-4 bg-green-600">
  <div class="flex justify-between">
    <h1 class="text-3xl text-white hover:opacity-75">
      <button>
        <a href="/">PokeDexGen1</a>
      </button>
    </h1>
    <input
      class="p-2 rounded-md w-72"
      type="text"
      placeholder="Escribe el nombre del pokemon..."
    />
    <div class="flex gap-4">
      <ButtonNavbar client:load text="Frameworks" />
      <ButtonNavbar client:load text="Ayuda" />
    </div>
  </div>
</navbar>
